<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.deepak.dsk.speechtextspeech.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <net.gotev.speech.ui.SpeechProgressView
            android:id="@+id/progress"
            android:layout_width="120dp"
            android:layout_height="150dp"/>

    </LinearLayout>




    <TextView
        android:id="@+id/convert_speech_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textStyle="italic"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:hint="converted text will display here"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />
   <ImageButton
       android:id="@+id/record_speech"
       android:layout_width="120dp"
       android:layout_height="60dp"
       android:text="RECORD_SPEECH"
       android:src="@drawable/mic"
       android:layout_gravity="center"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <EditText
        android:id="@+id/convert_text_speech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the text to convert Speech"/>
    <ImageButton
        android:id="@+id/convert_text_speech_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:layout_gravity="center"
        android:src="@drawable/speaker"
        />
</LinearLayout>
